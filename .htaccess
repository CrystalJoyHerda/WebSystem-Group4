<IfModule mod_rewrite.c>
    RewriteEngine On

    # Change this to match your project folder name
    RewriteBase /WebSystem-Group4/

    # If the requested path is an existing file or directory, serve it directly
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # If the request is not already pointing to /public, route it through CI4's front controller
    RewriteCond %{REQUEST_URI} !^/WebSystem-Group4/public/ [NC]
    RewriteRule ^(.*)$ public/index.php/$1 [L]
</IfModule>